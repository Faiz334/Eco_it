{% extends 'base.html.twig' %}

{% block title %}Eco It - Formations écologiques{% endblock %}

{% block body %}
    <header class="py-5 mb-4 bg-gradient">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="display-4 fw-bold text-success mb-3">Apprenez à préserver notre planète</h1>
                    <p class="lead mb-4">Découvrez nos formations éco-responsables et devenez acteur du changement</p>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                        <a href="{{ path('formation_show1') }}" class="btn btn-success btn-lg px-4 me-md-2">
                            <i class="fas fa-graduation-cap me-2"></i>Voir les formations
                        </a>
                    </div>
                </div>
                <div class="col-lg-6 d-none d-lg-block">
                    <img id="educ-img" src="/img/eco-education.jpg" alt="Éducation écologique" class="img-fluid">
                </div>
            </div>
        </div>
    </header>

    <main class="container">
        <section class="mb-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h3 fw-bold text-success">
                    <i class="fas fa-leaf me-2"></i>Formations récentes
                </h2>
                <a href="{{ path('formation_show1') }}" class="btn btn-outline-success">
                    Toutes les formations <i class="fas fa-arrow-right ms-2"></i>
                </a>
            </div>

            <div class="row">
                <div class="col-12">
                    {% if formations is empty %}
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>Aucune formation disponible pour le moment.
                        </div>
                    {% else %}
                        <div class="container">
                            {% include 'base/list.html.twig' with { formations } %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </section>

        <section class="features py-5">
            <h2 class="h3 fw-bold text-success text-center mb-4">Pourquoi choisir Eco It ?</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-certificate text-success fa-2x mb-3"></i>
                            <h3 class="h5">Formations certifiantes</h3>
                            <p class="text-muted">Obtenez une certification reconnue dans le domaine de l'écologie</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-users text-success fa-2x mb-3"></i>
                            <h3 class="h5">Experts qualifiés</h3>
                            <p class="text-muted">Apprenez avec des instructeurs passionnés et expérimentés</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-clock text-success fa-2x mb-3"></i>
                            <h3 class="h5">À votre rythme</h3>
                            <p class="text-muted">Suivez les formations selon votre emploi du temps</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}

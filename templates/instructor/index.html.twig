{% extends 'base.html.twig' %}

{% block title %}Devenir instructeur{% endblock %}

{% block body %}

<div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Devenir instructeur</h2>

                     {{ form_start(instructor) }}
                  <div class="form-outline mb-3">
                     {{ form_row(instructor.email) }}
                 </div>

                  <div class="form-outline mb-3">
                     {{ form_row(instructor.nom) }}
                 </div>

                  <div class="form-outline mb-3">
                     {{ form_row(instructor.prenom) }}
                 </div>

                 <div class="form-outline mb-3">
                     {{ form_row(instructor.username) }}
                 </div>

                  <div class="form-outline mb-3">
                     {{ form_row(instructor.plainPassword, {
                        label: 'Password'
                     }) }}
                 </div>

                  <div class="form-outline mb-3">
                     {{ form_row(instructor.description, {
                        label: 'Description'
                     }) }}
                 </div>
                   <div class="d-flex justify-content-center">
                     <button type="submit" class="btn btn-primary">Devenir Instructeur</button>
                 {{ form_end(instructor) }}
            </div>
            </div>
        </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

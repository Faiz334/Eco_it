{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
<div class="min-vh-100 d-flex align-items-center justify-content-center bg-gradient">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-12 col-lg-12 col-xl-12">
        <div class="card shadow border-0 rounded-4">
          <div class="card-body p-5">
            <h2 class="text-center mb-4 fw-bold text-success">
              <i class="fas fa-user-plus me-2"></i>Créer un compte
            </h2>
            {{ form_start(registrationForm) }}
              <div class="mb-3">
                <label class="form-label"><i class="fas fa-envelope me-2"></i>Email</label>
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control form-control-lg'}}) }}
              </div>
              <div class="mb-3">
                <label class="form-label"><i class="fas fa-user me-2"></i>Nom</label>
                {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control form-control-lg'}}) }}
              </div>
              <div class="mb-3">
                <label class="form-label"><i class="fas fa-user me-2"></i>Prénom</label>
                {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control form-control-lg'}}) }}
              </div>
              <div class="mb-3">
                <label class="form-label"><i class="fas fa-user-tag me-2"></i>Nom d'utilisateur</label>
                {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control form-control-lg'}}) }}
              </div>
              <div class="mb-3">
                <label class="form-label"><i class="fas fa-lock me-2"></i>Mot de passe</label>
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control form-control-lg'}}) }}
              </div>
              <div class="d-grid">
                <button type="submit" class="btn btn-success btn-lg mt-3">
                  <i class="fas fa-user-plus me-2"></i>S'inscrire
                </button>
              </div>
            {{ form_end(registrationForm) }}
            <p class="text-center text-muted mt-4 mb-0">
              Déjà un compte ?
              <a href="{{ path('app_login') }}" class="fw-bold text-success text-decoration-underline">Connexion ici</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

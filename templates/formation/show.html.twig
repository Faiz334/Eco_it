{% extends 'base.html.twig' %}

{% block title %}{{ formation.title }}{% endblock %}

{% block body %}
<div class="bg-gradient py-5 mb-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold text-success mb-2">{{ formation.title }}</h1>
                <p class="lead text-muted mb-3">{{ formation.description|striptags|slice(0, 180) ~ '...' }}</p>
                <div class="d-flex gap-3 mb-2">
                    <span class="badge bg-success"><i class="fas fa-clock me-1"></i> {{ formation.duration ?? '2h' }}</span>
                    <span class="badge bg-info text-dark"><i class="fas fa-signal me-1"></i> {{ formation.level ?? 'Tous niveaux' }}</span>
                </div>
                <div class="d-flex gap-2">
                    <a href="#content" class="btn btn-success btn-lg px-4">
                        <i class="fas fa-play-circle me-2"></i>Commencer la formation
                    </a>
                    <a href="{{ path('formation_show1') }}" class="btn btn-outline-success btn-lg">
                        <i class="fas fa-arrow-left me-2"></i>Retour aux formations
                    </a>
                </div>
            </div>
            <div class="col-lg-4 d-none d-lg-block text-end">
                <img src="/img/eco-education.svg" alt="Formation illustration" class="img-fluid" style="max-height:220px;">
            </div>
        </div>
    </div>
</div>

<div class="container" id="content">
    <div class="row">
        <!-- Sidebar Sections/Lessons -->
        <aside class="col-lg-4 mb-4 mb-lg-0">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-success text-white fw-bold">
                    <i class="fas fa-list-ul me-2"></i>Plan de la formation
                </div>
                <ul class="list-group list-group-flush">
                    {% for section in sections %}
                        <li class="list-group-item bg-light">
                            <strong>{{ section.title }}</strong>
                            <ul class="list-unstyled ms-3 mt-2">
                                {% for lesson in lessons %}
                                    {% if lesson.section.id is same as section.id %}
                                        <li>
                                            <a href="{{ path('lesson_watch', { 'slug': formation.slug, 'id': lesson.id }) }}" class="text-success text-decoration-none">
                                                <i class="fas fa-play-circle me-1"></i>{{ lesson.title }}
                                            </a>
                                        </li>
                                    {% endif %}
                                {% endfor %}
                            </ul>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </aside>
        <!-- Main Content -->
        <section class="col-lg-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body">
                    <h2 class="h4 fw-bold mb-3"><i class="fas fa-info-circle me-2 text-success"></i>Description</h2>
                    <p class="lead">{{ formation.description|raw }}</p>
                    {% if formation.link %}
                        <div class="ratio ratio-16x9 mb-4 rounded-3 overflow-hidden shadow-sm">
                            <iframe class="border-0" src="{{ formation.link }}" allowfullscreen></iframe>
                        </div>
                    {% endif %}
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-3">
                        <a href="#content" class="btn btn-primary">
                            Continuer <i class="fas fa-arrow-right ms-2"></i>
                        </a>
                    </div>
                </div>
            </div>
            <!-- Quiz or additional content can go here -->
        </section>
    </div>
</div>
{% endblock %}
